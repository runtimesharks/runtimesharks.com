{
	"compilerOptions": {
		"experimentalDecorators": true,
		"allowJs": true,
		"checkJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["esnext", "dom", "dom.iterable"],
		"moduleResolution": "node",
		"noEmit": true,
		"noResolve": true,
		"strict": true,
		"target": "es5",
		"module": "esnext",
		"skipLibCheck": true,
		"noImplicitThis": true,
		"pretty": true
	},
	"exclude": [
		"node_modules",
		"build",
		"*.config.js",
		"./**/base.js",
		"./**/paddle.js"
	]
}
