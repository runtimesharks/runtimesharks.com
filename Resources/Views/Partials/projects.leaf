<div class="projects">
	#loop(projects, "project") {
		<div class="project" style="
					#equal(project.imagePosition, "left") { border-right: solid 4px #(project.color) }
					##else() { border-left: solid 4px #(project.color) }">
			<header class="project-name centered">
				<a href="#(project.link)" style="color: #(project.color)"
												  onmouseover='this.style.borderColor="#(project.color)"'
    											  onmouseout='this.style.borderColor="transparent"'>#(project.name)</a>
			</header>

			<div class="project-meta">
				#equal(project.imagePosition, "left") {
					#embed("Partials/Projects/image")
					#embed("Partials/Projects/description")
				} ##else() {
					#embed("Partials/Projects/description")
					#embed("Partials/Projects/image")
				}
			</div>

			<div class="project-bottom-line"></div>
		</div>
	}

	<div class="other-projects centered">
		For more projects, please check Roland's <a href="https://rolandleth.com/projects">page</a>.
	</div>
</div>